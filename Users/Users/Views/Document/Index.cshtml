@if (Model is IEnumerable<ProtectedDocument>)
{
    <div class="bg-primary m-1 p-1 text-white">
        <h4>Dokumenty użytkownika (@User?.Identity.Name)</h4>
    </div>
    <table class="table table-sm table-bordered">
        <tr><th>Tytuł</th><th>Autor</th><th>Redaktor</th><th></th></tr>
        @foreach (var doc in Model)
        {
            <tr>
                <td>@doc.Title</td>
                <td>@doc.Author</td>
                <td>@doc.Editor</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-title="@doc.Title">Edytuj</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="bg-primary m-1 p-1">
        <h4>Edycja dokumentu @Model.Title (@User?.Identity?.Name)</h4>
    </div>
    <div class="m-1 p-1">To jest miejsce na funkcje związane z edycją dokumentu...</div>
    <a asp-action="Index" class="btn btn-primary">Gotowe</a>
}
<a asp-action="Logout" asp-controller="Account" class="btn btn-danger">Wyloguj</a>